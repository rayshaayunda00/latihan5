<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".konversiSuhu"
    android:background="@color/white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="640dp"
            android:background="@color/design_default_color_secondary_variant"
            android:gravity="center"
            android:id="@+id/navbar"
            >

            <TextView
                android:id="@+id/nav1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Latihan 5"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_below="@+id/nav1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:text="Pemrograman Mobile"
                android:textColor="@color/white"
                android:textSize="15sp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="55dp"
            android:gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Celsius"
                android:textColor="@color/black"
                android:id="@+id/text"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@color/design_default_color_secondary_variant"

                android:layout_below="@+id/text"
                android:hint="inputkan angka"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginTop="10dp"
                android:id="@+id/input"
                android:inputType="number"
                />

            <Button
                android:id="@+id/fahrenheit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_marginTop="10dp"
                android:background="@color/design_default_color_secondary_variant"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="Fahrenheit"

                android:textAllCaps="false"
                android:textColor="#000000" />

            <Button
                android:id="@+id/kelvin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/fahrenheit"
                android:background="@color/design_default_color_secondary_variant"
                android:backgroundTint="@color/white"
                android:paddingStart="37dp"
                android:paddingEnd="37dp"
                android:text="kelvin"
                android:textAllCaps="false"
                android:textColor="#000000" />

            <Button
                android:id="@+id/reamur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fahrenheit"
                android:layout_marginTop="10dp"
                android:background="@color/design_default_color_secondary_variant"
                android:backgroundTint="@color/white"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="Reamur"
                android:textAllCaps="false"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txthasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fahrenheit"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/reamur"
                android:background="@color/design_default_color_secondary_variant"
                android:paddingStart="38dp"
                android:paddingTop="15dp"
                android:paddingEnd="38dp"
                android:paddingBottom="15dp"

                android:text="Hasilnya"
                android:textAllCaps="false"
                android:textColor="#000000" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="640dp"
            android:gravity="center"
            android:id="@+id/credit">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="- rayshayunda -"
                android:textSize="15sp"
                android:gravity="center"/>

        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>