<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="670dp"
        android:background="@color/design_default_color_secondary_variant"
        android:gravity="center"
        android:id="@+id/navbar"
        >

        <TextView
            android:id="@+id/nav1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Latihan 5"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_below="@+id/nav1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:text="Pemrograman Mobile"
            android:textColor="@color/white"
            android:textSize="15sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:gravity="center"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konversi suhu"
            android:textAllCaps="false"
            android:background="@color/design_default_color_secondary_variant"

            android:textColor="@color/white"
            android:id="@+id/btnkonversisuhu"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diskon"
            android:textAllCaps="false"
            android:background="@color/black"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:textColor="@color/white"
            android:id="@+id/btndiskon"
            android:layout_below="@+id/btnkonversisuhu"
            android:layout_marginTop="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="luas dan Volume"
            android:textAllCaps="false"
            android:background="@color/design_default_color_secondary_variant"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/btnluasvolume"
            android:layout_below="@+id/btndiskon"
            android:layout_marginTop="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganjil genap"
            android:textAllCaps="false"
            android:background="@color/design_default_color_secondary_variant"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/btnganjilgenap"
            android:layout_below="@+id/btnluasvolume"
            android:layout_marginTop="5dp"

            />

        <Button
            android:id="@+id/btnpassingdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnganjilgenap"
            android:layout_marginTop="5dp"
            android:background="@color/design_default_color_secondary_variant"
            android:backgroundTint="@color/white"
            android:text="passing data"
            android:textAllCaps="false"
            android:textColor="@color/white"

            />
        <Button
            android:id="@+id/btnListview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnpassingdata"
            android:layout_marginTop="5dp"
            android:background="@color/design_default_color_secondary_variant"
            android:backgroundTint="@color/white"
            android:text="list view"
            android:textAllCaps="false"
            android:textColor="@color/white"

            />
        <Button
            android:id="@+id/btnRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnListview"
            android:layout_marginTop="5dp"
            android:background="@color/design_default_color_secondary_variant"
            android:backgroundTint="@color/white"
            android:text="RecyclerView"
            android:textAllCaps="false"
            android:textColor="@color/white"

            />
        <Button
            android:id="@+id/btnRv_Buah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnRecyclerView"
            android:layout_marginTop="5dp"
            android:background="@color/design_default_color_secondary_variant"
            android:backgroundTint="@color/white"
            android:text="RecyclerBuah"
            android:textAllCaps="false"
            android:textColor="@color/white"

            />
        <Button
            android:id="@+id/btnMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnRv_Buah"
            android:layout_marginTop="5dp"
            android:background="@color/design_default_color_secondary_variant"
            android:backgroundTint="@color/white"
            android:text="Movie List"
            android:textAllCaps="false"
            android:textColor="@color/white"

            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="640dp"
        android:gravity="center"
        android:id="@+id/credit">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="- rayshayunda -"
            android:textSize="15sp"
            android:gravity="center"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>